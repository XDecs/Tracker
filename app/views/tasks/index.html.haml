%h1 Listing tasks

%table
  %tr
    %th Title
    %th Description
    %th Begintime
    %th Endtime
    %th Difficulty
    %th User
    %th Project
    %th Tasktype
    %th Projectstatus
    %th
    %th
    %th

  - @tasks.each do |task|
    %tr
      %td= task.title
      %td= task.description
      %td= task.beginTime
      %td= task.endTime
      %td= task.difficulty
      %td= task.user_id
      %td= task.project_id
      %td= task.TaskType_id
      %td= task.ProjectStatus
      %td= link_to 'Show', task
      %td= link_to 'Edit', edit_task_path(task)
      %td= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Task', new_task_path
