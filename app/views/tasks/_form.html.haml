= form_for @task, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :beginTime, :class => 'control-label'
    .controls
      = f.date_select :beginTime, :class => 'date_select'
  .control-group
    = f.label :endTime, :class => 'control-label'
    .controls
      = f.date_select :endTime, :class => 'date_select'
  .control-group
    = f.label :difficulty, :class => 'control-label'
    .controls
      = f.number_field :difficulty, :class => 'number_field'
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.number_field :user_id, :class => 'number_field'
  .control-group
    = f.label :project_id, :class => 'control-label'
    .controls
      = f.number_field :project_id, :class => 'number_field'
  .control-group
    = f.label :TaskType_id, :class => 'control-label'
    .controls
      = f.number_field :TaskType_id, :class => 'number_field'
  .control-group
    = f.label :ProjectStatus, :class => 'control-label'
    .controls
      = f.check_box :ProjectStatus, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tasks_path, :class => 'btn'
