= form_for @tak do |f|
  -if @tak.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tak.errors.count, "error")} prohibited this tak from being saved:"
      %ul
        - @tak.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :begin_time
    = f.date_select :begin_time
  .field
    = f.label :end_time
    = f.date_select :end_time
  .field
    = f.label :difficulty
    = f.number_field :difficulty
  .field
    = f.label :User_id
    = f.number_field :User_id
  .field
    = f.label :priority_id
    = f.number_field :priority_id
  .field
    = f.label :task_type_id
    = f.number_field :task_type_id
  .field
    = f.label :status
    = f.check_box :status
  .actions
    = f.submit 'Save'
