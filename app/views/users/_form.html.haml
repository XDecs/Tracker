= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'
  .control-group
    = f.label :password, :class => 'control-label'
    .controls
      = f.text_field :password, :class => 'text_field'
  .control-group
    = f.label :user, :class => 'control-label'
    .controls
      = f.text_field :user, :class => 'text_field'
  .control-group
    = f.label :biography, :class => 'control-label'
    .controls
      = f.text_area :biography, :class => 'text_area'
  .control-group
    = f.label :country_id, :class => 'control-label'
    .controls
      = f.number_field :country_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
