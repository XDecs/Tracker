= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :biography
    = f.text_area :biography
  .field
    = f.label :country_id
    = f.number_field :country_id
  .actions
    = f.submit 'Save'
